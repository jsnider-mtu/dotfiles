#!/bin/bash

# Let's clean up some space if possible first
if [ -d ~/.a ]; then
  find ~/.a/ -mtime +3 -delete
fi

if [[ $# -eq 1 ]]; then
  line=$1
  t=1
else
  line=`cat ~/.t`
  t=0
fi

list=`echo $line|tr \| ' '`

for x in $list
do
  echo "Grabbing $x"
  xvideos-dl $x
  echo -e "\nDone with $x\n"
done

if [[ $t -eq 0 ]]; then
  echo "Cleaning up source file"
  rm ~/.t
fi
